{
    "extends": "tsconfig/nextjs.json",
    "compilerOptions": {
        "plugins": [
            {
                "name": "next"
            }
        ],
        "baseUrl": ".",
        "paths": {
            "@@client": ["src/client"],
            "@@components/*": ["src/client/components/*"],
            "@@images/*": ["public/images/*"],
            "@@lib/*": ["src/lib/*"],
            "@@styles/*": ["src/styles/*"],
            "@@types/*": ["src/types/*"]
        },
        "strictNullChecks": true
    },
    "exclude": ["node_modules"],
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"]
}
